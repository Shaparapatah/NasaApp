<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shaparapatah.nasaapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NasaApp">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".api.ApiActivity" />
        <activity android:name=".api.ApiBottomActivity" />
        <activity android:name=".api.CoordinatorLayout" />
        <activity android:name=".view.animations.AnimationsActivity" />
        <activity android:name=".view.animations.ImageTransformActivity" />
        <activity android:name=".view.animations.AnimationsPath" />
        <activity android:name=".view.animations.AnimationShuffle" />
        <activity android:name=".view.animations.AnimationFAB" />
        <activity android:name=".view.animations.AnimationsActivityBonus" />
        <activity android:name=".view.recyclerView.RecyclerActivity" />


    </application>
</manifest>



